@model List<MultiShop.RapidApiUI.Models.ECommerceViewModel.Product>
@{
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<div class="container mt-4">
    <h2 class="mb-4">Ürün Arama</h2>

    <!-- Ürün Arama Formu -->
    <form asp-action="ECommerceList" method="get">
        <div class="input-group mb-3">
            <input type="text" name="product" class="form-control" placeholder="Ürün adı girin..." required>
            <button class="btn btn-primary" type="submit">Ara</button>
        </div>
    </form>

    @if (Model != null && Model.Any())
    {
        <h3 class="mb-3">Sonuçlar:</h3>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4">
                        <img src="@item.product_photos[0]" class="card-img-top" alt="Ürün Resmi">
                        <div class="card-body">
                            <h5 class="card-title">@item.product_title</h5>
                            <p class="card-text"><strong>Fiyat:@item.typical_price_range[0]</strong> </p>
                            <a href="" target="_blank" class="btn btn-sm btn-outline-primary">Satın Al</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-muted">Aradığınız kriterlere uygun ürün bulunamadı.</p>
    }
</div>
