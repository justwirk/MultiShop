@using MultiShop.DtoLayer.OrderDtos.OrderOrderingDtos
@model List<ResultOrderingByUserIdDto>
@{
    ViewData["Title"] = "MyOrderList";
    Layout = "~/Areas/User/Views/UserLayout/Index.cshtml";

    int count = 0;
    string tablerowcolor = "";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Sipariş Geçmişim</h4>
           
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Toplam Fiyat.</th>
                            <th>Sipariş Tarihi</th>
                            <th>Sipariş Detayları</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            count++;
                            if (count % 2 ==0)
                            {
                                tablerowcolor = "table-dark";
                            }else
                            {
                                tablerowcolor = "table-secondary";

                            }
                            <tr class="@tablerowcolor">
                            <td>@count</td>
                            <td>@item.TotalPrice</td>
                            <td>@item.OrderDate</td>
                            <td><a href="#" class="btn btn-warning">Sipariş Detayı</a></td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
