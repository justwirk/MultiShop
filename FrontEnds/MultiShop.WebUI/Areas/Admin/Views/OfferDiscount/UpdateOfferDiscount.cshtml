@using MultiShop.DtoLayer.CatalogDtos.OfferDiscountDtos
@model GetByIdOfferDiscountDto
@{
    ViewData["Title"] = "UpdateOfferDiscount";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>Günün Teklifi Ekleme Sayfası</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">

                    <form method="post">
                        <input type="hidden" asp-for="OfferDiscountID" />
                        <label>Başlığı</label>
                        <input type="text" asp-for="Title" class="form-control" />
                        <br />
                        <label>Alt Başlığı</label>
                        <input type="text" asp-for="SubTitle" class="form-control" />
                        <br />
                        <label>Resim Yolu</label>
                        <input type="text" asp-for="ImageUrl" class="form-control" />
                        <br />

                        <button class="btn btn-primary">Özel Teklif Ekle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

