@using MultiShop.DtoLayer.BasketDtos
@model List<BasketItemDto>

@{
    // Toplam alışveriş tutarını hesapla (KDV dahil)
    decimal totalPrice = Model.Sum(item => item.Price * item.Quantity);
    decimal shippingFee = 24; // Kargo ücreti
    decimal grandTotal = totalPrice + shippingFee; // Genel toplam
}

<div class="bg-light p-30 mb-5">
    <div class="border-bottom">
        <h6 class="mb-3">Sipariş Ürün Listesi</h6>
        @foreach (var item in Model)
        {
            <div class="d-flex justify-content-between">
                <p>@item.ProductName (@item.Quantity)</p>
                <h6>@(item.Price * item.Quantity) ₺</h6>
            </div>
        }
    </div>
    <div class="border-bottom pt-3 pb-2">
        <div class="d-flex justify-content-between mb-3">
            <h6>Alışveriş Tutarı (Kdv dahil)</h6>
            <h6>@totalPrice.ToString("0.00") ₺</h6>
        </div>
        <div class="d-flex justify-content-between">
            <h6 class="font-weight-medium">Kargo Ücreti</h6>
            <h6 class="font-weight-medium">@shippingFee.ToString("0.00") ₺</h6>
        </div>
    </div>
    <div class="pt-2">
        <div class="d-flex justify-content-between mt-2">
            <h5>Genel Toplam</h5>
            <h5>@grandTotal.ToString("0.00") ₺</h5>
        </div>
    </div>
</div>
