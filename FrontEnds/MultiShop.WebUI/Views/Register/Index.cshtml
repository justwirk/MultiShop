@using MultiShop.DtoLayer.IdentityDtos.RegisterDtos
@model CreateRegisterDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Form-v4 by Colorlib</title>
	<!-- Mobile Specific Metas -->
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<!-- Font-->
	<link rel="stylesheet" type="text/css" href="~/colorlib-regform-30/css/opensans-font.css">
	<link rel="stylesheet" type="text/css" href="~/colorlib-regform-30/fonts/line-awesome/css/line-awesome.min.css">
	<!-- Jquery -->
	<link rel="stylesheet" href="https://jqueryvalidation.org/files/demo/site-demos.css">
	<!-- Main Style Css -->
	<link rel="stylesheet" href="~/colorlib-regform-30/css/style.css" />
</head>
<body class="form-v4">
	<div class="page-content">
		<div class="form-v4-content">
			<div class="form-left">
				<h2>MultShop E-Ticaret</h2>
				<p class="text-1">MultiShop projemiz üzerinden e-ticaret işlemlerinizi gerçekleştirebilir,sitemizdeki fırsatlardan yararlanabilmek için 1 dakikada kayıt işleminizi gerçekleştirebilirsiniz.</p>
				<div class="form-left-last">
					<a href="/Login/Index" class="account">Bir Hesabınız Var mı?</a>
				</div>
			</div>
			<form class="form-detail" method="post" >
				<h2>Kayıt Ol</h2>
				<div class="form-group">
					<div class="form-row form-row-1">
						<label for="first_name">Adınız</label>
						<input type="text" asp-for="Name" class="input-text">
					</div>
					<div class="form-row form-row-1">
						<label for="last_name">Soyadınız</label>
						<input type="text" asp-for="Surame" class="input-text">
					</div>
				</div>
				<div class="form-row">
					<label>Kullanıcı Adınız</label>
					<input type="text" asp-for="UserName" class="input-text" >
				</div>
				<div class="form-row">
					<label for="your_email">Email Adresi</label>
					<input type="text" asp-for="Email" class="input-text">
				</div>
				<div class="form-group">
					<div class="form-row form-row-1 ">
						<label for="password">Şifre</label>
						<input type="password" asp-for="Password" class="input-text">
					</div>
					<div class="form-row form-row-1">
						<label for="comfirm-password">Şifre Tekrar</label>
						<input type="password" asp-for="ConfirmPassword" class="input-text">
					</div>
				</div>
				
			
					<input type="submit"  class="register" value="Kayıt Ol">
				
			</form>
		</div>
	</div>
	<script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>
	<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
	<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>
	
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>